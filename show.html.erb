<div class="row">

	<div class="col-md-4">

		<%= image_tag @book.book_img.url(:book_show), class: "book-show" %>
		<br>
		<br>
	
	</div>
	<% if user_signed_in? %>
	<ul class="nav navbar-nav navbar-right">
	<%= form_tag "books/:id/popup" do %>
	<button>Rent this Book?</button>	
	<br><br>
	</ul>
	<%end%>
	<%end%>

	<div class="col-md-8">

	<div class="book-info">
		<b><h2><%= @book.title %></b></h2>
		<h3><%= @book.author %></h3>
		<i><h4><%= @book.price %></h4></i>
		<p><%= @book.description %></p>
		
	</div>
	</div>


</div>

<div class="row">

	<div class="col-md-4">



	</div>

</div>

<div class = "btn btn-primary btn-lg round">
<%= link_to "Back", root_path, :class => "btn"%>
</div>

<% if user_signed_in? %>

	<% if @book.user_id == current_user.id %>

	<button><%= link_to "Edit", edit_book_path(@book) %></button>
	<%= link_to "Delete", book_path(@book), method: :delete, data: { confirm: "Are you sure?" } %>


	<% end %>

<% end %>